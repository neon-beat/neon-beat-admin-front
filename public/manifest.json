      "url": "/admin/?view=playlists",
      "icons": [
        {
          "src": "/admin/images/logo.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Team Management",
      "short_name": "Teams",
      "description": "Create and manage teams",
      "url": "/admin/?view=teams",
      "icons": [
        {
          "src": "/admin/images/logo.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
