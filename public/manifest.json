{
  "name": "Neon Beat Admin",
  "short_name": "NBA Admin",
  "description": "Admin dashboard for managing Neon Beat game sessions, playlists, teams, and configurations",
  "version": "1.0.0",
  "start_url": "/admin/",
  "scope": "/admin/",
  "display": "standalone",
  "orientation": "landscape-primary",
  "theme_color": "#9E339F",
  "background_color": "#141414",
